<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FormIde2">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_form_ide2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/merah"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:title="Form Pengajuan Donasi">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <xute.markdeditor.EditorControlBar
                android:id="@+id/controlBar"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

            <xute.markdeditor.MarkDEditor
                android:id="@+id/mdEditor"
                android:layout_below="@+id/controlBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnnext3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mdEditor"
                android:layout_alignRight="@+id/mdEditor"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="15dp"
                android:background="@color/merah"
                android:text="Next"
                android:textColor="#fff" />

        </RelativeLayout>

    </ScrollView>



</LinearLayout>