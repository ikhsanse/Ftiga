<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/parent_profile"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="30dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@drawable/logo_ex"
            android:id="@+id/imv_logo"/>

        <LinearLayout
            android:id="@+id/linear_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/imv_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muhammad Adhi Herlianto"
                android:textSize="15sp"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Profile"
                />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_profil1"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/txt_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            style="@style/CardView"
            android:text="History"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_profil2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/txt_FAQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            style="@style/CardView"
            android:fontFamily="serif"
            android:text="FAQ"
            android:textSize="20dp"
            android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_profil3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/txt_About"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            style="@style/CardView"
            android:fontFamily="serif"
            android:text="About Us"
            android:textSize="20dp"
            android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_profil4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/txt_Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            style="@style/CardView"
            android:fontFamily="serif"
            android:text="Logout"
            android:textSize="20dp"
            android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>

</LinearLayout>