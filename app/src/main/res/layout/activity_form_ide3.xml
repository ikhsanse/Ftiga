<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".form_ide3"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_form_ide3"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/merah"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:title="Form Pengajuan Donasi">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#CC363A">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Paket - 1"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhite"
                                android:textSize="30dp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Nama Paket"
                                android:textColor="@color/colorBlack"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                />

                            <EditText
                                android:id="@+id/np1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:textSize="20dp"
                                android:background="@drawable/edttext_square"
                                android:textColor="@color/colorBlack"
                                android:paddingLeft="5dp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Jumlah"
                                android:textColor="@color/colorBlack"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                />

                            <EditText
                                android:id="@+id/jml1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:textSize="20dp"
                                android:background="@drawable/edttext_square"
                                android:textColor="@color/colorBlack"
                                android:paddingLeft="5dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Feedback"
                                android:textColor="@color/colorBlack"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                />

                            <EditText
                                android:id="@+id/fbck1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:textSize="20dp"
                                android:background="@drawable/edttext_square"
                                android:textColor="@color/colorBlack"
                                android:paddingLeft="5dp"
                                />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#CC363A">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Paket - 2"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Nama Paket"
                                android:textColor="@color/colorBlack"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                />

                            <EditText
                                android:id="@+id/np2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:textSize="20dp"
                                android:background="@drawable/edttext_square"
                                android:textColor="@color/colorBlack"
                                android:paddingLeft="5dp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Jumlah"
                                android:textColor="@color/colorBlack"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                />

                            <EditText
                                android:id="@+id/jml2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:textSize="20dp"
                                android:background="@drawable/edttext_square"
                                android:textColor="@color/colorBlack"
                                android:paddingLeft="5dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Feedback"
                                android:textColor="@color/colorBlack"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                />

                            <EditText
                                android:id="@+id/fbck2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:textSize="20dp"
                                android:background="@drawable/edttext_square"
                                android:textColor="@color/colorBlack"
                                android:paddingLeft="5dp"
                                />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#CC363A">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Paket - 3"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Nama Paket"
                                android:textColor="@color/colorBlack"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                />

                            <EditText
                                android:id="@+id/np3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:textSize="20dp"
                                android:background="@drawable/edttext_square"
                                android:textColor="@color/colorBlack"
                                android:paddingLeft="5dp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Jumlah"
                                android:textColor="@color/colorBlack"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                />

                            <EditText
                                android:id="@+id/jml3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:textSize="20dp"
                                android:background="@drawable/edttext_square"
                                android:textColor="@color/colorBlack"
                                android:paddingLeft="5dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Feedback"
                                android:textColor="@color/colorBlack"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                />

                            <EditText
                                android:id="@+id/fbck3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:textSize="20dp"
                                android:background="@drawable/edttext_square"
                                android:textColor="@color/colorBlack"
                                android:paddingLeft="5dp"
                                />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/btnnext4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgView"
                android:layout_gravity="right"
                android:layout_marginTop="30dp"
                android:text="Next"
                android:textColor="#fff"
                android:background="@color/merah"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>